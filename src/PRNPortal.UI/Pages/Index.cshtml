@* @model PRNPortal.UI.ViewModels.HomePageSelfManagedViewModel *@

@page
@model PRNPortal.UI.ViewModels.HomePageSelfManagedViewModel 

@{
    var title = "Home";
}

<main class="govuk-main-wrapper" id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-xl govuk-!-margin-bottom-6 break-word">@title</h1>
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <div class="govuk-inset-text">
                <p class="govuk-body govuk-!-font-weight-bold govuk-!-margin-bottom-1">OrganisationNumber </p>
            </div>
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-half">
            <div class="govuk-card govuk-card--grey govuk-card--border-bottom-blue govuk-!-margin-bottom-7">
                <div class="govuk-card-body">
                    <h2 class="govuk-heading-m">Packaging Recycling Notes</h2>
                    <h2 class="govuk-heading-m">
                        @Html.ActionLink(
                                 "Raise PRN/PERN",
                                 "Get",
                                 "PackagingRecyclingNote",
                                 null,
                                 new
                                 {
                                     @class = "govuk-link govuk-link--no-visited-state"
                                 })
                    </h2>
                    <h2 class="govuk-heading-m">
                        @Html.ActionLink(
                                 "View PRN/PERN",
                                 "PrnDetail",
                                 "PackagingRecyclingNote",
                                 null,
                                 new
                                 {
                                     @class = "govuk-link govuk-link--no-visited-state"
                                 })
                    </h2>
                </div>
            </div>
        </div>
    </div>


</main>